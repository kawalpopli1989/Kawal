<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:healthengine="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/color_white"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <healthengine.android.com.healthengine.FontedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            healthengine:font="Lato-Regular.ttf"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/btnDialogShareCancel"
            android:text="Cancel"
            android:background="@null"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/normal_gray"
            />

        <healthengine.android.com.healthengine.FontedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            healthengine:font="Lato-Regular.ttf"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/btnDialogShareMail"
            android:text="Mail"
            android:background="@null"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/normal_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <healthengine.android.com.healthengine.FontedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:textColor="#000000"
            healthengine:font="Lato-Regular.ttf"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/btnDialogShareFacebook"
            android:text="Facebook"
            android:background="@null"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/normal_gray"
            />

        <healthengine.android.com.healthengine.FontedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            healthengine:font="Lato-Regular.ttf"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/btnDialogShareTwitter"
            android:text="Twitter"
            android:background="@null"/>
        </LinearLayout>
</LinearLayout>