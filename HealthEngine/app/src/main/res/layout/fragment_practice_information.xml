<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:healthengine="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_gray">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/normal_gray">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/general_practice"
            android:orientation="horizontal"
            android:padding="7dp"
            >

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/general_practice"
                android:orientation="vertical">
                <healthengine.android.com.healthengine.FontedText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    healthengine:font="Lato-Regular.ttf"
                    android:text="Monday, 11 Jan"
                    android:textColor="#ffffff"
                    />
                <healthengine.android.com.healthengine.FontedText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    healthengine:font="Lato-Regular.ttf"
                    android:text="08:00am"
                    android:textColor="#ffffff"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/general_practice"
                android:gravity="right"
                android:orientation="vertical">
                <healthengine.android.com.healthengine.FontedText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Mark Kent"
                    healthengine:font="Lato-Regular.ttf"
                    android:textColor="#ffffff"

                    />
                <healthengine.android.com.healthengine.FontedText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    healthengine:font="Lato-Regular.ttf"
                    android:text="CBD West Medical Centre"
                    android:textColor="#ffffff"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center">
                <healthengine.android.com.healthengine.utils.CircularImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_launcher"
                    />
            </LinearLayout>


        </LinearLayout>

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="APPOINTMENT PRICING"
            android:background="@color/normal_gray"
            android:textColor="#000000"
            healthengine:font="Lato-Regular.ttf"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <healthengine.android.com.healthengine.FontedText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Standard Appointment"
                healthengine:font="Lato-Regular.ttf"
                android:background="#ffffff"
                android:textColor="#000000"
                android:padding="10dp"
                />
            <healthengine.android.com.healthengine.FontedText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="$80.00"
                healthengine:font="Lato-Regular.ttf"
                android:background="#ffffff"
                android:textColor="@color/general_practice"
                android:padding="10dp"
                android:gravity="right|center_vertical"
                />

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/normal_gray"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <healthengine.android.com.healthengine.FontedText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Long Appointment"
                healthengine:font="Lato-Regular.ttf"
                android:background="#ffffff"
                android:textColor="#000000"
                android:padding="10dp"
                />
            <healthengine.android.com.healthengine.FontedText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="$125.00"
                healthengine:font="Lato-Regular.ttf"
                android:background="#ffffff"
                android:textColor="@color/general_practice"
                android:padding="10dp"
                android:gravity="right|center_vertical"
                />

        </LinearLayout>
        <healthengine.android.com.healthengine.FontedText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="PRACTICE POLICY"
            android:background="@color/normal_gray"
            healthengine:font="Lato-Regular.ttf"
            android:textColor="#000000"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            />

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="If you are a new patient to our practice, please arrive ten minutes early to fill out our forms.\n\nCBD West Medical Centre is a private billing practice.\n\nPayment is required at the time of consultation.\n\nOpiates or benzodiazepines will NOT be prescribed to new patients."
            healthengine:font="Lato-Regular.ttf"
            android:background="#ffffff"
            android:textColor="#000000"
            android:padding="10dp"
            />

    </LinearLayout>
    <healthengine.android.com.healthengine.FontedText
        android:id="@+id/continue_booking_textview"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        healthengine:font="Lato-Regular.ttf"
        android:text="Continue Booking"
        android:gravity="center"
        android:background="@color/color_toolbar"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"/>
</RelativeLayout>