<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:healthengine="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_transparent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_background"
        android:orientation="vertical">

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Share HealthEngine"
            healthengine:font="Lato-Bold.ttf" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/normal_gray"/>

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="18sp"
            android:id="@+id/btnDialogShareFacebook"
            android:textColor="@color/color_toolbar"
            android:text="via Facebook"
            healthengine:font="Lato-Bold.ttf" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/normal_gray"/>

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="18sp"
            android:id="@+id/btnDialogShareTwitter"
            android:textColor="@color/color_toolbar"
            android:text="via Twitter"
            healthengine:font="Lato-Bold.ttf" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/normal_gray"/>

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/color_toolbar"
            android:text="via Email"
            android:id="@+id/btnDialogShareMail"
            healthengine:font="Lato-Bold.ttf" />
    </LinearLayout>

    <healthengine.android.com.healthengine.FontedText
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/color_toolbar"
        android:background="@drawable/white_background"
        android:text="Cancel"
        android:id="@+id/btnDialogShareCancel"
        android:layout_marginTop="15dp"
        healthengine:font="Lato-Bold.ttf" />

</LinearLayout>