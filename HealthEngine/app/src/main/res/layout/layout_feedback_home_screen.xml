<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:healthengine="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/blue_background">

    <healthengine.android.com.healthengine.FontedText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        healthengine:font="Lato-Regular.ttf"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_20"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_01"
        android:background="@color/color_white"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:orientation="horizontal"
        >

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/leave_review"
            android:gravity="center"
            healthengine:font="Lato-Regular.ttf"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_05"
            />

        <View
            android:layout_width="@dimen/margin_01"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            />

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/send_review"
            android:gravity="center"
            healthengine:font="Lato-Regular.ttf"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_05"
            />

        <View
            android:layout_width="@dimen/margin_01"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            />

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/close"
            healthengine:font="Lato-Regular.ttf"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_05"
            />




        </LinearLayout>

</LinearLayout>
