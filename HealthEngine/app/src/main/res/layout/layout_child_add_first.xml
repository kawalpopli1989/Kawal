<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:healthengine="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_48"
    android:paddingTop="@dimen/margin_05"
    android:divider="@color/color_white"
    android:showDividers="middle"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48"
        android:layout_weight="1"
        android:background="@color/light_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_15"
            android:background="@drawable/button_add_background"
            android:src="@drawable/icon_add"  />

        <healthengine.android.com.healthengine.FontedText
            android:id="@+id/practioner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            healthengine:font="Lato-Regular.ttf"
            android:text="@string/tap_to_add"
            android:textSize="@dimen/margin_15"
            android:gravity="center"/>




    </LinearLayout>
</TableRow>