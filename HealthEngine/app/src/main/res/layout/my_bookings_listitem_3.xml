<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:healthengine="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:background="#dedede"
        android:gravity="center"
        android:orientation="vertical"
        >

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00am"
            healthengine:font="Lato-Regular.ttf"
            android:textColor="#90000000"
            android:textSize="15sp"
            />

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 21, 2015"
            healthengine:font="Lato-Regular.ttf"
            android:textColor="#90000000"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical"
        android:padding="10dp">

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fictional Health Medical Center"
            healthengine:font="Lato-Regular.ttf"
            android:textColor="#000"
            android:textSize="15sp" />

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Ord Street"
            healthengine:font="Lato-Regular.ttf"
            android:textColor="@color/darker_gray"
            android:textSize="15sp"

            />

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subiaco WA 6008"
            healthengine:font="Lato-Regular.ttf"
            android:textColor="@color/darker_gray"
            android:textSize="15sp"

            />

    </LinearLayout>

</LinearLayout>