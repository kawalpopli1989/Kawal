<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:healthengine="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_gray"
    android:orientation="vertical"
    tools:context="healthengine.android.com.healthengine.fragments.SettingFragment">

    <healthengine.android.com.healthengine.FontedText
        android:id="@+id/account_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACT INFORMATION"
        android:gravity="bottom"
        android:textSize="@dimen/margin_15"
        android:paddingLeft="10dp"
        android:paddingTop="25dp"
        healthengine:font="Lato-Regular.ttf"
        android:paddingBottom="5dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            >

            <healthengine.android.com.healthengine.FontedEditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@null"
                android:hint="First name"
                healthengine:font="Lato-Regular.ttf"
                android:textSize="16sp"
                android:textColorHint="@color/darker_gray"
                android:padding="7dp"
                android:layout_height="50dp" />
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/normal_gray"/>
            <healthengine.android.com.healthengine.FontedEditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@null"
                healthengine:font="Lato-Regular.ttf"
                android:textSize="16sp"
                android:hint="Last name"
                android:textColorHint="@color/darker_gray"
                android:padding="7dp"
                android:layout_height="50dp" />

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/normal_gray"/>

        <healthengine.android.com.healthengine.FontedEditText
            android:layout_width="fill_parent"
            android:background="#FFFFFF"
            healthengine:font="Lato-Regular.ttf"
            android:textSize="16sp"
            android:hint="Mobile phone number"
            android:textColorHint="@color/darker_gray"
            android:padding="7dp"
            android:layout_height="50dp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/normal_gray"/>
        <healthengine.android.com.healthengine.FontedEditText
            android:layout_width="fill_parent"
            android:background="#FFFFFF"
            healthengine:font="Lato-Regular.ttf"
            android:textSize="16sp"
            android:hint="E-mail"
            android:textColorHint="@color/darker_gray"
            android:padding="7dp"
            android:layout_height="50dp" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/normal_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10"
        >

        <healthengine.android.com.healthengine.FontedText
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            healthengine:font="Lato-Regular.ttf"
            android:maxLines="2"
            android:text="Receive relevant notifications, uodates and offers from Health Engine and our partners."
            android:ellipsize="end"
            android:background="@android:color/white"
            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_15"/>
    </LinearLayout>
    <healthengine.android.com.healthengine.FontedText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADDRESS"
        healthengine:font="Lato-Regular.ttf"
        android:gravity="bottom"
        android:textSize="@dimen/margin_15"
        android:paddingLeft="10dp"
        android:paddingTop="25dp"
        android:background="@color/normal_gray"
        android:paddingBottom="5dp"
        />
    <healthengine.android.com.healthengine.FontedEditText
        android:layout_width="fill_parent"
        android:background="#FFFFFF"
        android:textSize="16sp"
        healthengine:font="Lato-Regular.ttf"
        android:hint="Street"
        android:textColorHint="@color/darker_gray"
        android:padding="7dp"
        android:layout_height="50dp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/normal_gray"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <healthengine.android.com.healthengine.FontedEditText
            android:layout_weight="5"
            android:layout_width="0dp"
            android:background="@null"
            healthengine:font="Lato-Regular.ttf"
            android:hint="Suburb"
            android:textSize="16sp"
            android:textColorHint="@color/darker_gray"
            android:padding="7dp"
            android:layout_height="50dp" />
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/normal_gray"/>
        <healthengine.android.com.healthengine.FontedEditText
            android:layout_weight="2"
            android:layout_width="0dp"
            android:background="@null"
            healthengine:font="Lato-Regular.ttf"
            android:textSize="16sp"
            android:hint="Postcode"
            android:textColorHint="@color/darker_gray"
            android:padding="7dp"
            android:layout_height="50dp" />




    </LinearLayout>
    <healthengine.android.com.healthengine.FontedText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATE OF BIRTH"
        android:gravity="bottom"
        healthengine:font="Lato-Regular.ttf"
        android:textSize="@dimen/margin_15"
        android:paddingLeft="10dp"
        android:paddingTop="25dp"
        android:background="@color/normal_gray"
        android:paddingBottom="5dp"
        />
    <healthengine.android.com.healthengine.FontedText
        android:id="@+id/fragment_patient_date_text"
        android:layout_width="fill_parent"
        android:background="#FFFFFF"
        android:textSize="16sp"
        healthengine:font="Lato-Regular.ttf"
        android:text="Tap to set"
        android:gravity="center_vertical"
        android:padding="7dp"
        android:textColor="@color/color_toolbar"
        android:layout_height="50dp" />

</LinearLayout>
