<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:healthengine="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_48"
    android:paddingTop="@dimen/margin_05"
    android:divider="@color/color_white"
    android:showDividers="middle"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48"
        android:layout_weight="1"
        android:background="#e5e5e5"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/general_practitioner_button"
            android:padding="@dimen/margin_15"
            android:src="@drawable/icon_gp_small" />

        <healthengine.android.com.healthengine.FontedText
            android:id="@+id/practioner_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_05"
            android:layout_toLeftOf="@+id/loc"
            healthengine:font="Lato-Regular.ttf"
            android:layout_toRightOf="@+id/icon"
            android:layout_weight="0.7"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="NorthBride Medical centre"
            android:textSize="@dimen/margin_15" />

        <healthengine.android.com.healthengine.FontedText
            android:id="@+id/loc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            healthengine:font="Lato-Regular.ttf"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="0.2"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text="Perth"
            android:textSize="@dimen/margin_15" />


    </LinearLayout>
</TableRow>